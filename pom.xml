			<dependency>
				<groupId>it.bancaditalia.oss.vtl</groupId>
				<artifactId>vtl-transform</artifactId>
				<version>${project.version}</version>
			</dependency>
			<dependency>
				<groupId>it.bancaditalia.oss.vtl</groupId>
				<artifactId>vtl-launcher</artifactId>
				<version>${project.version}</version>
			</dependency>
			<dependency>
				<groupId>it.bancaditalia.oss.vtl</groupId>
